<%= form_for @article do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
    <p>
      <%= f.label :author_id %><br />
      <%= collection_select(:article, :author_id, Author.all, :id, :first_name) %>
    </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
